<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:background="@drawable/text_underline"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tV_anc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:singleLine="false"
        android:text="@string/anc"
        android:textColor="#FD9C33"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_weight="4"
        android:layout_gravity="top|left"
        />

        <Button
            android:id="@+id/cart_butt"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/foodcart_icon"
            android:gravity="center" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/anc_rv"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0.74"
        />
    <Button
        android:id="@+id/menu_anc_btn"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.15"
        android:background="@drawable/menu_butt_bg"
        android:text="@string/menu"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        />

</LinearLayout>
