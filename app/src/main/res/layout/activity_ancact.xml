<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ANCact"
    android:padding="8dp">


    <TextView
        android:id="@+id/tV_anc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/text_underline"
        android:paddingBottom="8dp"
        android:singleLine="false"
        android:text="@string/anc"
        android:textColor="#FD9C33"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/menu__anc_btn"
        android:layout_width="250dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
         android:layout_marginBottom="30dp"
        android:background="@drawable/menu_butt_bg"
        android:text="@string/menu"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/cart_butt"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/foodcart_icon"
        />

</RelativeLayout>