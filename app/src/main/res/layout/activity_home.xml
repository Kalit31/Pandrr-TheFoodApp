<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/anc_butt"
        android:layout_width="220dp"
        android:layout_height="115dp"
        android:layout_below="@+id/tV_homescrn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/button_background"
        android:shadowColor="#4D4B49"
        android:shadowDx="7"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:text="ANC"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/looters_butt"
        android:layout_width="220dp"
        android:layout_height="115dp"
        android:layout_below="@+id/anc_butt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/button_background"
        android:shadowColor="#4D4B49"
        android:shadowDx="7"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:text="Looters"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/others_butt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/looters_butt"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"

        android:background="@drawable/button2_background"
        android:text="Others"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/tV_homescrn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/text_underline"
        android:paddingBottom="8dp"
        android:singleLine="false"
        android:text="Pandrr"
        android:textAllCaps="false"
        android:textColor="#FD9C33"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/info_icon" />
</RelativeLayout>