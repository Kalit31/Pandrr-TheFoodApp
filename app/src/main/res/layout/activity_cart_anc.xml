<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.CartActivity_ANC"
    >

    <TextView
            android:id="@+id/tV_cart_code_anc"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.075"
            android:background="@drawable/cart_b"
            android:gravity="center"
    />


    <TextView
        android:id="@+id/textView7_anc"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.005"
        android:background="#2BD5F8"
        android:gravity="center"
    />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_cart_anc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:padding="16dp"

        />
    <Button
        android:id="@+id/empty_anc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.005"
        android:background="@drawable/menu_butt_bg"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:text="Empty Cart"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tV_total_anc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_weight="0.05"
        android:background="@drawable/cart_text_view"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:padding="24dp"
        android:text="Total:  *amount here"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>